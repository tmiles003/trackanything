<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tracker_nane"
        android:hint="tracker name"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />


    <EditText
        android:id="@+id/edit_kvp_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/element_name"
        android:layout_margin="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Spinner
            android:id="@+id/types_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/types" />

        <Spinner
            android:id="@+id/colors_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/colors" />

        <Spinner
            android:id="@+id/graph_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/graph" />


    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_margin="10dp" />

</LinearLayout>